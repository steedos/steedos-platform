{
  "name": "steedos-platform",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*",
    "ee/*",
    "server",
    "steedos-packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna clean --yes && lerna bootstrap",
    "build": "yarn bootstrap && lerna run build",
    "docker": "docker-compose up",
    "docker:db": "docker-compose up mongodb mongodb-init redis nats",
    "i18n": "lerna run i18n",
    "start": "steedos start --config steedos.config.js",
    "sync": "lerna exec --no-private  -- cnpm sync \\$LERNA_PACKAGE_NAME",
    "repl": "moleculer-runner  --config steedos.config.js --repl"
  },
  "resolutions": {
    "@salesforce/ts-types": "1.1.2",
    "**/fibers": "5.0.3",
    "**/type-fest": "0.21.3",
    "@types/mime": "3.0.0"
    
  },
  "devDependencies": {
    "cnpm": "9.0.1",
    "tslib": "^2.4.0",
    "@babel/core": "^7.8.4",
    "@types/express-serve-static-core": "~4.17.29",
    "@types/node": "18.0.3",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.19",
    "typescript": "4.6.3"
  }
}
